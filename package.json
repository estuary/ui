{
    "name": "estuary-react",
    "version": "0.1.0",
    "description": "A web based UI to assist in working with Estuary Flow",
    "main": "index.js",
    "private": true,
    "dependencies": {
        "@emotion/react": "latest",
        "@emotion/styled": "latest",
        "@jsonforms/core": "^2.5.2",
        "@jsonforms/material-renderers": "^2.5.2",
        "@jsonforms/react": "^2.5.2",
        "@jsonforms/vanilla-renderers": "^2.5.2",
        "@mui/icons-material": "latest",
        "@mui/material": "latest",
        "@mui/x-data-grid": "latest",
        "@types/react": "latest",
        "@types/react-dom": "latest",
        "prop-types": "^15.7.2",
        "react": "latest",
        "react-dom": "latest",
        "react-jsonschema-form-material-ui": "^3.0.0-beta.2",
        "react-router-dom": "^6.0.0-beta.8"
    },
    "devDependencies": {
        "@testing-library/jest-dom": "^5.15.0",
        "@testing-library/react": "^12.1.2",
        "eslint-plugin-jest-dom": "^3.9.2",
        "husky": "^7.0.0",
        "lint-staged": "^11.2.6",
        "prettier": "^2.4.1",
        "react-scripts": "latest",
        "tsc-files": "^1.1.2",
        "typescript": "latest"
    },
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "lint": "eslint . --color",
        "pre-commit": "lint-staged",
        "prepare": "husky install"
    },
    "lint-staged": {
        "*.{js,jsx,ts,tsx,json,css,scss,md}": [
            "prettier --write"
        ]
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest",
            "plugin:jest-dom/recommended",
            "plugin:jsx-a11y/recommended"
        ],
        "plugins": [
            "jsx-a11y",
            "testing-library",
            "jest-dom"
        ]
    },
    "browserslist": {
        "production": [
            ">1%",
            "last 4 versions",
            "Firefox ESR",
            "not ie < 11"
        ],
        "development": [
            "last 2 chrome versions",
            "last 2 firefox versions",
            "last 2 edge versions"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/estuary/ui.git"
    }
}
